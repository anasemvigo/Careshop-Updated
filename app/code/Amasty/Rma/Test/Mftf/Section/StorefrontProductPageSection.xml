<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">

    <section name="StorefrontProductPageSection">
        <element name="MoreInformationTab" type="button" selector="#tab-label-additional-title"/>
        <element name="RepairPeriod" type="text" selector="//td[@data-th='Repair period'][contains(string(), '{{days}} days')]" parameterized="true"/>
        <element name="ReturnPeriod" type="text" selector="//td[@data-th='Return period'][contains(string(), '{{days}} days')]" parameterized="true"/>
        <element name="ExchangePeriod" type="text" selector="//td[@data-th='Exchange period'][contains(string(), '{{days}} days')]" parameterized="true"/>
    </section>
</sections>